{
    "mcpServers": {
        "ppt": {
        "command": "python",
        "args": [
            "config/mcptools/Office-PowerPoint-MCP-Server/ppt_mcp_server.py"
        ],
        "env": {
            "PYTHONPATH": "config/mcptools/Office-PowerPoint-MCP-Server",
            "PPT_TEMPLATE_PATH": "config/mcptools/MCP_tools/Office-PowerPoint-MCP-Server/templates"
        }
        },
        "github_server": {
            "transport": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_TOKEN": "$GITHUB_TOKEN"
            }
        }
    }
}