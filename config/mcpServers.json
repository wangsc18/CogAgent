      "args": [
        "/c",
        "npx",
        "-y",
        "@antv/mcp-server-chart"
      ]
    },
    
    "ppt": {
      "command": "python",
      "args": [
        "config/mcptools/Office-PowerPoint-MCP-Server/ppt_mcp_server.py"
      ],
      "env": {}
    },
    
    "filesystem": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "E:/人机交互/CHI2026/CogAgent"
      ]
    },

    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "E:/人机交互/CHI2026/CogAgent/CogAgent/config/memory.json"
      }
    }
    
  }
